
<div class="card darken-1">
  <div class="card-content white-text">
    <li>
      <%= gravatar_for user, size: 52 %>
      <%= link_to user.name, user %>
      <% if current_user.admin? && !current_user?(user) %>
      <br>
      |<%= link_to '删除', user, method: :delete, data: { confirm: "该操作无法撤销，确认？" } %>|
      <% end %>
    </li>
  </div>
</div>
