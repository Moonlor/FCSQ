<% if object.errors.any? %>
  <div id = "error_explanation">
    <div class="card-panel red lighten-1">
      <span class="white-text">The form contains <%= pluralize(object.errors.count, "error") %>.
        <% object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </span>
   </div>
  </div>
<% end %>
