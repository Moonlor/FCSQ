<% r_id = rand(999999999999) %>

<div class="divider"></div>

<ul class="collapsible cyan lighten-3" data-collapsible="expandable">
  <li>
    <h5 class="collapsible-header cyan lighten-3" style="text-align:center">
    <% for each in daily_item['flight'] %>
      <%= each['arv_date'] %>
      <% break %>
    <% end %>
    </h5>

    <div class="collapsible-body">

      <ul class="collapsible cyan lighten-1" data-collapsible="expandable">
        <li>
          <% if daily_item['flight'].size != 0%>
            <h5 class="collapsible-header cyan lighten-1" style="text-align:center">Recommended flight: </h5>
          <% end %>
          <div class="collapsible-body">
            <div class="flight_feed">
              <ul id="flight_feed_<%= r_id %>">
                <% for each in daily_item['flight'] %>
                  <li style="opacity: 0">
                    <%= render partial: 'shared/flight_card', object: each %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </li>
      </ul>


      <ul class="collapsible cyan lighten-1" data-collapsible="expandable">
        <li>
          <% if daily_item['hotel'].size != 0%>
            <h5 class="collapsible-header cyan lighten-1" style="text-align:center">Recommended hotel: </h5>
          <% end %>
          <div class="collapsible-body">
            <div class="hotel_feed">
              <ul id="hotel_feed_<%= r_id %>">
                <% for each in daily_item['hotel'] %>
                  <li style="opacity: 0" >
                  <%= render partial: 'shared/hotel_card', object: each %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </li>
      </ul>

    </div>
  </li>
</ul>
        
<script type="text/javascript">

(function($){
  $(function(){
    
  var options = [
  	{selector: '#flight_feed_<%= r_id %>', offset: 400, callback: function(el) {
      Materialize.showStaggeredList($(el));
    } },
    {selector: '#hotel_feed_<%= r_id %>', offset: 400, callback: function(el) {
      Materialize.showStaggeredList($(el));
    } }
  ];
  Materialize.scrollFire(options);

  }); // end of document ready
})(jQuery); // end of jQuery name space
</script>
